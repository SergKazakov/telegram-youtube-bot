{
  "private": true,
  "scripts": {
    "dev": "node --watch --inspect -r dotenv-safe/config src/index.mjs",
    "start": "node src/index.mjs"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "plugin:import/recommended",
      "xo",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "no-await-in-loop": "off",
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "import/no-unresolved": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "unicorn/filename-case": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/no-null": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "root": true
  },
  "dependencies": {
    "@hokify/agenda": "^6.3.0",
    "axios": "^1.3.4",
    "fast-xml-parser": "^4.1.3",
    "googleapis": "^113.0.0",
    "he": "^1.2.0",
    "mongodb": "^5.1.0",
    "telegraf": "^4.12.2",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@evilmartians/lefthook-installer": "^1.3.6",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^46.0.0",
    "prettier": "^2.8.4"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  }
}
