{
  "private": true,
  "scripts": {
    "start": "node src/index.mjs",
    "dev": "nodemon --watch src --inspect -r dotenv-safe/config src/index.mjs"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:import/recommended",
      "xo",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/no-null": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "import/no-unresolved": "off",
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "no-await-in-loop": "off"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@evilmartians/lefthook-installer": "^1.2.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^45.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "agenda": "^5.0.0",
    "dotenv-safe": "^8.2.0",
    "fast-xml-parser": "^4.0.12",
    "googleapis": "^109.0.1",
    "he": "^1.2.0",
    "mongodb": "^4.12.1",
    "pubsubhubbub": "^1.0.2",
    "telegraf": "^4.11.2",
    "yup": "^0.32.11"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  }
}
