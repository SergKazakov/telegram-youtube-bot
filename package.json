{
  "name": "telegram-youtube-bot",
  "private": true,
  "scripts": {
    "start": "node --experimental-modules -r dotenv-safe/config src/index.mjs",
    "dev": "nodemon --watch src --inspect --experimental-modules -r dotenv-safe/config src/index.mjs",
    "test": "eslint --ignore-path .gitignore --fix ./src/**/*.mjs"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:import/recommended",
      "xo/esnext",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/no-null": "off",
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-xo": "^0.32.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unicorn": "^20.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "dayjs": "^1.8.18",
    "dotenv-safe": "^8.2.0",
    "dumper.js": "^1.3.1",
    "fast-xml-parser": "^3.15.1",
    "googleapis": "^46.0.0",
    "he": "^1.2.0",
    "ioredis": "^4.14.1",
    "mongoose": "^5.8.2",
    "pubsubhubbub": "^1.0.1",
    "telegraf": "^3.34.1",
    "yup": "^0.28.0"
  },
  "engines": {
    "node": "11"
  }
}
