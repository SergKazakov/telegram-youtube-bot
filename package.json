{
  "name": "telegram-youtube-bot",
  "private": true,
  "scripts": {
    "start": "node --experimental-modules -r dotenv-safe/config src/index.mjs",
    "dev": "nodemon --inspect --experimental-modules -r dotenv-safe/config src/index.mjs",
    "test": "eslint --ignore-path .gitignore --fix .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.mjs": [
      "eslint --fix",
      "git add -A"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "unicorn"
    ],
    "extends": [
      "xo/esnext",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false
  },
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.23.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-unicorn": "^4.0.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.13.7"
  },
  "dependencies": {
    "dotenv-safe": "^6.0.0",
    "express": "^4.16.3",
    "fast-xml-parser": "^3.11.1",
    "googleapis": "^32.0.0",
    "mongoose": "^5.2.4",
    "pubsubhubbub": "^0.4.1",
    "telegraf": "^3.21.2"
  },
  "engines": {
    "node": ">=10"
  }
}
